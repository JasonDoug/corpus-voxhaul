# Production Environment Configuration
NODE_ENV=production

# AWS Configuration
AWS_REGION=us-east-1

# Disable LocalStack in production
USE_LOCALSTACK=false
LOCAL_MODE=false

# External API Keys (Set these as environment variables in Lambda)
# OpenRouter (recommended - unified access to multiple models)
# OPENROUTER_API_KEY=<set-in-lambda-env>

# Or use direct API keys
# OPENAI_API_KEY=<set-in-lambda-env>
# ANTHROPIC_API_KEY=<set-in-lambda-env>

# Text-to-Speech
# TTS_API_KEY=<set-in-lambda-env>

# LLM Provider (openrouter, openai, anthropic)
LLM_PROVIDER=openrouter

# Processing Configuration
MAX_PDF_SIZE_MB=100
ANALYSIS_TIMEOUT_MS=300000
AUDIO_SYNTHESIS_TIMEOUT_MS=600000

# Note: DynamoDB tables, S3 buckets, and EventBridge bus names
# are automatically set by CloudFormation outputs in template.yaml
