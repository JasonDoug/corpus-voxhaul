{
  "name": "pdf-lecture-service",
  "version": "1.0.0",
  "description": "Transform scientific PDFs into engaging audio lectures with synchronized playback",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/local-server/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "bundle": "esbuild src/functions/**/*.ts --bundle --platform=node --target=node20 --outdir=dist/functions",
    "deploy": "bash scripts/deploy.sh dev",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:prod": "bash scripts/deploy.sh prod",
    "sam:build": "sam build",
    "sam:validate": "sam validate --lint",
    "sam:local": "sam local start-api"
  },
  "keywords": [
    "pdf",
    "lecture",
    "audio",
    "serverless",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.949.0",
    "@aws-sdk/client-dynamodb": "^3.948.0",
    "@aws-sdk/client-eventbridge": "^3.948.0",
    "@aws-sdk/client-polly": "^3.948.0",
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/lib-dynamodb": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "@thednp/dommatrix": "^2.0.9",
    "@types/pdf-parse": "^1.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pngjs": "^7.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "pdf-lib": "^1.17.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
